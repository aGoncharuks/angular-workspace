{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@desk/api-interface": ["libs/api-interface/src/index.ts"],
      "@desk/shared-screen": ["libs/shared-screen/src/index.ts"],
      "@desk/lazy-screen-admin": ["libs/lazy-screen-admin/src/index.ts"],
      "@desk/shared-components": ["libs/shared-components/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
